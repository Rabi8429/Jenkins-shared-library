
@Library('Jenkins-shared-library') _
pipeline{
    agent any

    parameters{
        choice(name: 'action', choices: 'craete\ndelete', description: 'Choose create/Destroy')
    }
     
    stages{

        when { expression {  param.action == 'create' } }

        stage('Git Checkout'){
            steps{
                gitCheckout(
                    branch: "main",
                    url: "https://github.com/Rabi8429/django-notes-app.git"
                )
            }
        }
        stage('Unit Test maven'){

            when { expression {  param.action == 'create' } }

            steps{

                mvnTest()
            }
        }
        stage('Integration Test Maven'){

         when { expression {  param.action == 'create' } }
            
            steps{

                mvnIntegrationTest()
            }
        }
    }
}